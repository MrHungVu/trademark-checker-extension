{
  "manifest_version": 3,
  "name": "Trademark Checker for Etsy",
  "version": "1.0.0",
  "description": "Automatically check trademark status for Etsy listings to prevent legal issues",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.etsy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.etsy.com/listing/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}